{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "target": "ES2020",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "jsx": "preserve",
        "incremental": true,
        "paths": {
            "@/*": [
                "./app/*"
            ],
            "@/lib/*": [
                "../../lib/*"
            ],
            "@/components/*": [
                "./components/*"
            ]
        }
    },
    "include": [
        "next-env.d.ts",
        "**/*.ts",
        "**/*.tsx"
    ],
    "exclude": [
        "node_modules"
    ]
}