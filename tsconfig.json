{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": [
      "ES2020"
    ],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "declaration": true,
    "baseUrl": ".",
    "paths": {
      "@/lib/*": [
        "./lib/*"
      ],
      "@/packages/*": [
        "./packages/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "dist",
    ".next"
  ]
}